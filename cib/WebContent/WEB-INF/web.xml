<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
        http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<description>siganiture system</description>
	<!-- add the XSSFilter to avoid xss -by PQ-2014/8/1-->
	<filter>
		<filter-name>RequestFilter</filter-name>
		<filter-class>app.cib.util.RequestFilter</filter-class>
		<init-param>
			<param-name>errorPage</param-name>
			<param-value>/common/error.jsp</param-value>
		</init-param>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>
	<filter>
		<filter-name>EncodingFilter</filter-name>
		<filter-class>com.neturbo.set.utils.EncodingFilter</filter-class>
		<init-param>
			<param-name>encoding</param-name>
			<param-value>utf-8</param-value>
		</init-param>
	</filter>

	<filter-mapping>
		<filter-name>RequestFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>EncodingFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<servlet>
		<servlet-name>DownloadCVS</servlet-name>
		<servlet-class>app.cib.util.DownLoadCSVServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownloadStatement</servlet-name>
		<servlet-class>app.cib.util.DownloadStatementServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>DownloadZip</servlet-name>
		<servlet-class>app.cib.util.DownloadZipServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AdminServlet</servlet-name>
		<servlet-class>org.apache.axis.transport.http.AdminServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AxisServlet</servlet-name>
		<servlet-class>org.apache.axis.transport.http.AxisServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>SOAPMonitorService</servlet-name>
		<servlet-class>org.apache.axis.monitor.SOAPMonitorService</servlet-class>
		<init-param>
			<param-name>SOAPMonitorPort</param-name>
			<param-value>5001</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>action</servlet-name>
		<servlet-class>com.neturbo.base.action.ActionServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>2</param-value>
		</init-param>
		<init-param>
			<param-name>config</param-name>
			<param-value>/WEB-INF/neturbo-config.xml</param-value>
		</init-param>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>JsaxController</servlet-name>
		<servlet-class>com.jsax.core.JsaxController</servlet-class>
		<init-param>
			<param-name>isSpringVersion</param-name>
			<param-value>Y</param-value>
		</init-param>
	</servlet>
	<!-- add by long_zg 2014-12-31 for CR202  Application Level Encryption for BOL&BOB begin-->
	<servlet>
		<servlet-name>EncryptionServlet</servlet-name>
		<servlet-class>app.cib.cription.EncryptionServlet</servlet-class>
	</servlet>
	<!-- add by long_zg 2014-12-31 for CR202  Application Level Encryption for BOL&BOB end-->
	<servlet-mapping>
		<servlet-name>JsaxController</servlet-name>
		<url-pattern>/jsax</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>action</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>*.jws</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>SOAPMonitorService</servlet-name>
		<url-pattern>/SOAPMonitor</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/services/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AdminServlet</servlet-name>
		<url-pattern>/servlet/AdminServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AxisServlet</servlet-name>
		<url-pattern>/servlet/AxisServlet</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadCVS</servlet-name>
		<url-pattern>/DownloadCVS</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadStatement</servlet-name>
		<url-pattern>/DownloadStatement</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>DownloadZip</servlet-name>
		<url-pattern>/DownloadZip</url-pattern>
	</servlet-mapping>
	<!-- add by long_zg 2014-12-31 for CR202  Application Level Encryption for BOL&BOB begin-->
	<servlet-mapping>
		<servlet-name>EncryptionServlet</servlet-name>
		<url-pattern>/EncryptionServlet</url-pattern>
	</servlet-mapping>
	<!-- add by long_zg 2014-12-31 for CR202  Application Level Encryption for BOL&BOB end-->
	<session-config>
		<session-timeout>10</session-timeout>
	</session-config>
	
 <servlet>
    <servlet-name>PrintComServlet</servlet-name>
    <servlet-class>app.cib.print.PrintComServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>PrintComServlet</servlet-name>
    <url-pattern>/prtcom</url-pattern>
  </servlet-mapping>
     <servlet>
    <servlet-name>ImageHostServlet</servlet-name>
    <servlet-class>app.cib.print.ImageHostServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ImageHostServlet</servlet-name>
    <url-pattern>/image</url-pattern>
  </servlet-mapping>
  
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
